<% @picture_title = gravatar_url_for(@user.email) %>
<div style="margin-left: 5px">
<!--
  
  -->
	<h3 style="margin-left: 0px;" >Definições:</h3>
	<div style="margin-left: 0px; border-left:1px solid #D3E1F9; padding-left: -12px; margin-top:-25px;">
		<ul style="list-style:circle">
		<% if @siglas.empty? %>
			 <li> Por enquanto nenhuma </li>
		<% end %>
		<% @siglas.each do |sigla| %>
			 <li><%= link_to sigla.sigla, url_def( sigla.sigla) %></li>
		<% end %>
		</ul>
	</div>
	
	<h3 style="margin-left: 0px;" >Colaboração de Feedback:</h3>
	<div style="border-left:1px solid #D3E1F9;margin-left:0;margin-top:-25px;padding-left:20px;">
		<%= image_tag 'uhand.png', :class => 'selected' %> <%= @user.ups.count %> <br />
		<%= image_tag 'flag.png', :class => 'selected' %> <%= @user.flags.count %> <br />
		<!--		
		<% @user.flags.each do |user_flags| %>
  		<%= user_flags.definition.definition %> <br />
      <%= user_flags.obs %> <br />
    <% end %>
		-->
	</div>
	
</div>