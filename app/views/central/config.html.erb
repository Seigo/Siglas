  <h3 style="margin-left: 0px;" >Editar conta:</h3>
  <div style="margin-left: 0px; border-left:1px solid #D3E1F9; padding-left: -12px; margin-top:-25px;">
    <% form_for @user, :url => { :controller => 'central', :action => 'edit_profile' } do |f| %>
      <%= f.error_messages %>
      <p>
        <%= f.label :name, "Nome" %><br />
        <%= f.text_field :name %> <%= field_hint 'ex: Fabiano P Soriani'%>
      </p>
      <p>
        <%= f.label :email, "E-Mail" %><br />
        <%= f.text_field :email %> <%= field_hint 'Login e sua Imagem em <a href="http://gravatar.com">gravatar.com </a>'%>
      </p>
      <br/>
      <p>
        <%= f.label :country, "País" %><br />
        <%= f.select :country, CountryList.read.collect {|p| [ p[1], p[0] ] } %> <%= field_hint 'País de residência'%>
      </p>
      <p>
        <%= f.label :language, "Idioma" %><br />
        <%= f.select :language, LanguageList.read.collect {|p| [ p[0], p[1] ] } %> <%= field_hint 'Seu indioma de preferência'%>
      </p>
      <br/>
      <p><%= f.submit 'Salvar' %></p>
    <% end %>

  </div>
	
	
	<h3 style="margin-left: 0px;" >Alterar Senha:</h3>
  <div style="margin-left: 0px; border-left:1px solid #D3E1F9; padding-left: -12px; margin-top:-25px;">
    <% form_for @user, :url => { :controller => 'central', :action => 'edit_password' } do |f| %>
			<p>
        <%= f.label :password, "Senha" %><br />
        <%= f.password_field :password %> <%= field_hint 'Deve ter mais de 4 dígitos !'%>
      </p>
      <p>
        <%= f.label :password_confirmation, "Confirmação de Senha" %><br />
        <%= f.password_field :password_confirmation %> <%= field_hint 'Repita aqui sua senha'%>
      </p>
      <br/>
			<p><%= f.submit 'Alterar' %></p>
    <% end %>
	</div>
	
	
	<h3 style="margin-left: 0px;" >Apagar conta:</h3>
	<div style="border-left:1px solid #D3E1F9;margin-left:0;margin-top:-25px;padding-left:20px;">
        
    <% form_tag '/central/delete_profile' do %>
        <button type="submit" >APAGAR</button>
    <% end %>
  </div>
	
</div>